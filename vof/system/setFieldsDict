FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}

defaultFieldValues
(
    volScalarFieldValue alpha.metal 0
);

regions
(
    surfaceToCell
    {
        file "constant/triSurface/4_size.stl";
        nearDistance 1e-7;
        curvature 1e-4;
        outsidePoints ((0.0 0.0 0.000255));
        regularization 1e-6;
        smooth 0;

        includeCut true;
        includeInside true;
        includeOutside false;

        fieldValues
        (
            volScalarFieldValue alpha.metal 1
        );
    }
);
